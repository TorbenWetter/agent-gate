{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(coderabbit:*)",
      "Bash(cp:*)",
      "Bash(docker logs:*)",
      "Bash(docker-compose logs:*)",
      "Bash(docker-compose ps:*)",
      "Bash(find:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh search:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm ci)",
      "Bash(npm install)",
      "Bash(npm ls:*)",
      "Bash(npm run build)",
      "Bash(npm run format)",
      "Bash(npm run format:fix)",
      "Bash(npm run lint)",
      "Bash(npm run lint:fix)",
      "Bash(npm run test)",
      "Bash(npm show:*)",
      "Bash(npm test)",
      "Bash(npx eslint:*)",
      "Bash(pnpm ci)",
      "Bash(pnpm install)",
      "Bash(pnpm run build)",
      "Bash(pnpm run format)",
      "Bash(pnpm run format:fix)",
      "Bash(pnpm run lint)",
      "Bash(pnpm run lint:fix)",
      "Bash(pnpm run test)",
      "Bash(pytest:*)",
      "Bash(python -m pytest:*)",
      "Bash(rg:*)",
      "Bash(ruff format --check src/ tests/)",
      "Bash(touch:*)",
      "Bash(uv:*)",
      "Bash(uvx ruff check:*)",
      "Bash(uvx ruff format:*)",
      "Edit",
      "MultiEdit",
      "WebFetch",
      "WebSearch",
      "Write",
      "mcp__Ref",
      "mcp__sequential-thinking"
    ],
    "deny": [
      "Bash(git push --force-with-lease:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(rm -rf:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledPlugins": {
    "yourvid-tools@yourvid-marketplace": true,
    "coderabbit@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true
  },
  "extraKnownMarketplaces": {
    "yourvid-marketplace": {
      "source": {
        "source": "github",
        "repo": "YourVid-GmbH/claude-code-plugins"
      }
    }
  }
}
