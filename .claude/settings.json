{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "enableAllProjectMcpServers": true,
  "enabledPlugins": {
    "yourvid-tools@yourvid-marketplace": true
  },
  "extraKnownMarketplaces": {
    "yourvid-marketplace": {
      "source": {
        "source": "github",
        "repo": "YourVid-GmbH/claude-code-plugins"
      }
    }
  },
  "permissions": {
    "allow": [
      "Bash(coderabbit:*)",
      "Bash(cp:*)",
      "Bash(find:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(rg:*)",
      "Bash(touch:*)",
      "Bash(uv:*)",
      "Bash(uvx ruff check:*)",
      "Bash(uvx ruff format:*)",
      "Edit",
      "MultiEdit",
      "WebFetch",
      "WebSearch",
      "Write",
      "mcp__Ref",
      "mcp__sequential-thinking"
    ],
    "deny": [
      "Bash(git push --force-with-lease:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(rm -rf:*)"
    ]
  }
}
